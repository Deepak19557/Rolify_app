
<table class="table table-striped table-bordered table-hover friend_list">
    <thead class="thead-dark">
        <tr>
            <th>Email</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr class="size">
                <td><%= user.email %></td>
                <td><%= user.roles.pluck(:name)%></td>   
            </tr>
        <% end%>
    </tbody>
</table>